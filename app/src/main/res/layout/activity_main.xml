<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Service Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="حالة الخدمة"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_stopped"
                    android:textSize="16sp"
                    android:textColor="@color/error"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/startStopButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_service"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Permissions Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الأذونات"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <!-- Overlay Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overlay_permission"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/overlayStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disabled"
                            android:textColor="@color/error"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/overlayPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/grant_permission"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- Accessibility Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accessibility_permission"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/accessibilityStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disabled"
                            android:textColor="@color/error"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/accessibilityPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/grant_permission"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- Bluetooth Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bluetooth_permission"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/bluetoothStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disabled"
                            android:textColor="@color/error"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bluetoothPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/grant_permission"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button Positions Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مواقع النقر"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <!-- Button 1 Position -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/floating_button_1_bg"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/button1PositionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_not_set"
                            android:textColor="@color/accent"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/setButton1PositionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/set_click_position"
                        android:textSize="11sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- Button 2 Position -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/floating_button_2_bg"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_2"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/button2PositionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_not_set"
                            android:textColor="@color/accent"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/setButton2PositionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/set_click_position"
                        android:textSize="11sp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bluetooth Audio Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="صوت البلوتوث"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="فعّل هذا لجعل ميكروفون السماعة هو المصدر الرئيسي"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/enableBluetoothAudioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تفعيل صوت البلوتوث"
                    android:backgroundTint="@color/accent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructions Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions_text"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
